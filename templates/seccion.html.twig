<tr>
	<td align="center" valign="top">

		<table border="0" cellpadding="0" cellspacing="0" width="600" class="seccion" id="{{ seccion.titulo|slug }}">

			<h3 class="titulo">{{seccion.titulo}}</h3>

			{% if seccion.contenido %}
				<div class="contenido">
					{{seccion.contenido|raw}}
				</div>
			{% endif %}

			{% for bloque in seccion.bloques %}
				{% block bloque %}
					{% include 'bloque.html.twig' %}
				{% endblock %}

			{% endfor %}


			{% if seccion.info %}
				<div class="info">
					{{bloque.info}}
				</div>
			{% endif %}
		</table> 
	</td>
</tr>

