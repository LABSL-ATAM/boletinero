<tr>
	<td align="center" valign="top">
		<table 
			border="0"
			cellpadding="10" 
			cellspacing="0"
			width="600"
			class="seccion"
		>

			<tr>
				<td  class="titulo">
					<h3>{{seccion.titulo}}</h3>
				</td>
			</tr>

		{% if seccion.intro %}
			<tr>
				<td align="center" valign="top">
					<table 
						border="0" 
						cellpadding="0" 
						cellspacing="0" width="100%"
						class="intro"	
				>
						<tr>
							<td class="contenido">
								{{seccion.intro|markdown}}
							</td>
						</tr>
					</table>
				</td>
			</tr>			
		{% endif %}


		{% for bloque in seccion.bloques %}
			{% block bloque %}
				{% include 'bloque.html.twig' %}
			{% endblock %}

		{% endfor %}


		{% if seccion.info %}
			<tr>
				<td align="center" valign="top">
					<table 
						border="0" 
						cellpadding="0" 
						cellspacing="0" width="100%"
						class="info"
					>
						<tr>
							<td class="">
								{{seccion.info|markdown}}
							</td>
						</tr>
					</table>
				</td>
			</tr>			
		{% endif %}

		</table>
	</td>
</tr>

